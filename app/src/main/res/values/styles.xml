<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--    Calculator-->
    <style name="ButtonBase" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/calc_btn_shape</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>

        <item name="backgroundTint">@null</item>
    </style>

    <style name="ButtonOperation" parent="ButtonBase">
        <item name="android:background">@drawable/calc_btn_digit_shape</item>
    </style>

    <!--    2048-->

    <style name="Game2048TextStyles" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/game2048_btn_shape</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_2048</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Game2048TextStylesInfo" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#493F37</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Game2048Header" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/main_2048</item>
        <item name="android:textSize">20sp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="CellBase" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/calc_btn_shape</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>

        <item name="backgroundTint">@null</item>
    </style>

    <style name="Cell_0" parent="CellBase">
        <item name="android:textColor">#FCF3EA</item>
        <item name="android:backgroundTint">@color/game_bg_0</item>
    </style>

    <style name="Cell_2" parent="CellBase">
        <item name="android:textColor">#81766A</item>
        <item name="android:backgroundTint">@color/game_bg_2</item>
    </style>

    <style name="Cell_4" parent="CellBase">
        <item name="android:textColor">#81766A</item>
        <item name="android:backgroundTint">@color/game_bg_4</item>
    </style>

    <style name="Cell_8" parent="CellBase">
        <item name="android:textColor">#FEF1DF</item>
        <item name="android:backgroundTint">@color/game_bg_8</item>
    </style>

    <style name="Cell_16" parent="CellBase">
        <item name="android:textColor">#F9F5EF</item>
        <item name="android:backgroundTint">@color/game_bg_16</item>
    </style>
</resources>